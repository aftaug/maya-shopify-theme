<style>
  .password-page__header .logo {
    width: {{ section.settings.logo_max_width | escape }}px;
  }
</style>

<header class="password-page__header" role="banner">
  <h1 class="password-page__header__inner" itemscope itemtype="http://schema.org/Organization">
    {% assign logo_width = section.settings.logo_max_width | escape | times: 1 %}
    {% if section.settings.logo != blank and logo_width <= 2048 %}
      {% capture image_size %}{{ section.settings.logo_max_width | escape }}x{% endcapture %}
      <img class="logo" src="{{ section.settings.logo | img_url: image_size }}" alt="{{ shop.name }}" itemprop="logo">
    {% else %}
      <span class="h2">{{ shop.name }}</span>
    {% endif %}
  </h1>
</header>



{% schema %}
{
  "name": {
    "de": "Titel",
    "en": "Header",
    "es": "Encabezado",
    "fr": "En-tête",
    "it": "Header",
    "ja": "ヘッダー",
    "pt-BR": "Cabeçalho"
  },
  "class": "password-header-section",
  "settings": [
    {
      "type": "image_picker",
      "id": "logo",
      "label": {
        "de": "Logo-Foto",
        "en": "Logo image",
        "es": "Imagen del logotipo",
        "fr": "Image du logo",
        "it": "Immagine del logo",
        "ja": "ロゴ画像",
        "pt-BR": "Imagem do logotipo"
      }
    },
    {
      "type": "text",
      "id": "logo_max_width",
      "label": {
        "de": "Benutzerdefinierte Logobreite (in Pixel, max. 2048)",
        "en": "Custom logo width (in pixels, max 2048)",
        "es": "Ancho del logotipo personalizado (en píxeles, máx. 2048)",
        "fr": "Largeur personnalisée du logo (en pixels, max. 2 048)",
        "it": "Larghezza logo personalizzato (in pixel, massimo 2048)",
        "ja": "ロゴの幅をカスタムする（最大2048ピクセル）",
        "pt-BR": "Largura do logotipo personalizado (em pixels, máx. 2048)"
      },
      "default": {
        "de": "200",
        "en": "200",
        "es": "200",
        "fr": "200",
        "it": "200",
        "ja": "200",
        "pt-BR": "200"
      }
    }
  ]
}
{% endschema %}
